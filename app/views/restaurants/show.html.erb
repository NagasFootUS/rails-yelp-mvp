<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<ul class="list-group mine">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">Comment: <%= review.content %> With a Rating of <%= review.rating %></li>

  <% end %>
</ul>


<div><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
</div>
<div><%= link_to "Back to index", restaurants_path %></div>

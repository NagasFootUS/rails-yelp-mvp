

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="card h-100 border-primary justify-content-center">
                <div>
                     <h2><%= @restaurant.name %></h2>
                      <p><%= @restaurant.address %></p>
                      <p><%= @restaurant.phone_number %></p>
                      <p><%= @restaurant.category %></p>
                      <ul class="list-group mine">
                        <% @restaurant.reviews.each do |review| %>
                          <li class="list-group-item">Comment: <%= review.content %> With a Rating of <%= review.rating %></li>
                        <% end %>
                      </ul>
                    <div class="btn btn-primary"><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant)%></div>
                    <div class="btn btn-secondary"><%= link_to "Back to index", restaurants_path %></div>
                </div>
                </div>
            </div>
        </div>
    </div>
